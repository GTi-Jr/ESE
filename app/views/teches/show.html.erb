<%= render 'navbar' %>
<%= render 'menu' %>
<div class="page-content">
  <div class="container-fluid">
    <h1 class="page-heading"> <%= @tech.title %> </h1>
    <div class="row">
      <div class="col-md-8">
        <div class="panel with-nav-tabs panel-warning panel-square panel-no-border">
          <div class="panel-heading">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#property-description" data-toggle="tab"><%= @tech.title %></a></li>
          </ul>
          </div>
          <div class="panel-body">
            <div class="tab-content">
              <div class="tab-pane fade in active" id="property-description">
                  <h4><%= @tech.description %></h4>
                <table class="table table-th-block">
                  <tbody>
                    <tr><td class="active">Dia</td><td><%= @tech.day %></td></tr>
                    <tr><td class="active">Horário</td><td><%= @tech.time %></td></tr>
                    <tr><td class="active">Limite de Alunos</td><td><%= @tech.limit %></td></tr>
                    <tr><td class="active">Preço</td><td><%= @tech.price %></td></tr>
                  </tbody>
                </table>
              </div>              
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">        
        <div class="panel panel-warning panel-square panel-no-border">
          <div class="panel-heading" style="text-align:center">
          <h3>Professor</h3>
          </div>
          <div class="the-box no-border full card-info">
            <div class="the-box no-border text-center no-margin">
              <h4 class="bolded"><%= @tech.teacher %></h4>
              <% if @tech.teacher_image != nil %>
                <img src="<%= @tech.teacher_image %>" style="width: 60px" class="social-avatar has-margin has-light-shadow img-circle" alt="Avatar">
              <% end %>
              <p class="text-muted">
              <%= @tech.teacher_description %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>   
</div>
<div class="page-content">
  <%= render 'footer' %>
</div>
