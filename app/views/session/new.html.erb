<div class="login tooltips">  
  <div class="login-header text-center" style="padding: 1% 0 0 0">
    <%= image_tag("logo.png") %>   
  </div>
  <div class="login-wrapper">    
    <%= form_tag do %>
      <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name == :notice ? "success" : "warning" %>">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
         </div>
        <% end %>
      <% end %>

      <div class="form-group has-feedback lg left-feedback no-label">
        <%= text_field_tag :email, params[:email], class: "form-control no-border input-lg rounded", placeholder: "Enter Email" %>
      </div>
      <div class="form-group has-feedback lg left-feedback no-label">
        <%= password_field_tag :password, params[:password], class: "form-control no-border input-lg rounded", placeholder: "Enter Password" %>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-warning btn-lg btn-perspective btn-block">LOGIN</button>
      </div>
    </form>
    <%end%>

    <p class="text-center"><strong><a href="/forgot-password">Esqueceu a senha?</a></strong></p>
    <p class="text-center">ou</p>
    <p class="text-center"><strong><a href="/entry">Inscrição no Evento</a></strong></p>
  </div><!-- /.login-wrapper -->
</div>